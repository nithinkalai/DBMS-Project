    <table style="width: 100%; height: 100%; text-align:center; font-size: large;">
        <tr>
            <td>SL NO</td>
            <td>Clothing name</td>
            <td>Category</td>
            <td>Description</td>
            <td>Seller</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Total Price</td>
        </tr>
        <% for(var i = 0;i < result.rows.length; i++){ %>
            <tr>
                <td>
                    <%= i+1 %>
                </td>
                <td>
                    <%= result.rows[i]["clothing_name"] %>
                </td>
                <td>
                    <%= result.rows[i]["category"] %> 
